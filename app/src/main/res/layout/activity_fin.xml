<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fin">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="406dp"
        android:layout_height="150dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toTopOf="@+id/idTitre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/idTitre"
        android:layout_width="407dp"
        android:layout_height="108dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="3dp"
        android:background="#00BCD4"
        android:backgroundTint="#00BCD4"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/idSmiley"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <ImageView
        android:id="@+id/idSmiley"
        android:layout_width="409dp"
        android:layout_height="227dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toTopOf="@+id/idResultats"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idTitre"
        app:srcCompat="@drawable/Smiley_1" />

    <Button
        android:id="@+id/idResultats"
        android:layout_width="398dp"
        android:layout_height="108dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="50dp"
        android:background="#9C27B0"
        android:backgroundTint="#9C27B0"
        android:text="VOIR LES RESULTATS"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idSmiley" />
</androidx.constraintlayout.widget.ConstraintLayout>